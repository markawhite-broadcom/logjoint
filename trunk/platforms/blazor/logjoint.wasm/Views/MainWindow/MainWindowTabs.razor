@namespace LogJoint.Wasm.UI

<div class='main-window-tabs @Class'>
    <TabsView SelectedTab="@selectedTab" Tabs="@tabs" OnSelect="SetSelectedTab" />
    @switch (selectedTab)
    {
        case 0:
            <LogSourcesManager Class="tab-content" />
            break;
        case 1:
            <BookmarksList Class="tab-content" />
            break;
        case 2:
            <SearchPanel Class="tab-content"/>
            break;
        case 3:
            <PostprocessingTabPage Class="tab-content" />
            break;
        case 4:
            <DebugTab Class="tab-content" />
            break;
    }
</div>

@code {
    private static string[] tabs = new[] { "Log Sources", "Bookmarks", "Search", "Postprocessing", "Debug" };

    [Parameter]
    public string Class { get; set; } = "";

    int selectedTab = 0;

    void SetSelectedTab(int value)
    {
        selectedTab = value;
        StateHasChanged();
    }
}
